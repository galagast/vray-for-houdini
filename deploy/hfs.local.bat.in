:: V-Ray For Houdini Windows Development Launcher
::
@echo off

setlocal

set VRAY_APPSDK=@APPSDK_ROOT@
set VRAY_PLUGIN_DESC_PATH=@CMAKE_SOURCE_DIR@\deploy\plugins_desc
set VRAY_UI_DS_PATH=@CMAKE_SOURCE_DIR@\deploy\ui
set VRAY_FOR_HOUDINI_AURA_LOADERS=@Phoenix_LIBRARIES@
set PYTHONPATH=@VFH_PYTHON_DIRPATH@;^&

:: Houdini
set HFS=@HOUDINI_INSTALL_ROOT@
set HOUDINI_PATH=@CMAKE_SOURCE_DIR@\deploy\vfh_home;^&
set HOUDINI_DSO_PATH=@VFH_DSO_DIRPATH@;^&
set HOUDINI13_VOLUME_COMPATIBILITY=1

set HOUDINI_DSO_ERROR=1
set HOUDINI_SOHO_DEVELOPER=1
set HOUDINI_DISABLE_CONSOLE=0
set HOUDINI_TEXT_CONSOLE=1
set HOUDINI_WINDOW_CONSOLE=0
set HOUDINI_VERBOSE_ERROR=1

:: Add libs to path
set PATH=%HFS%\bin;@VFH_BIN_DIRPATH@;%VRAY_APPSDK%\bin;%PATH%;%VRAY_FOR_HOUDINI_AURA_LOADERS%

where /Q dbgcore.dll
IF ERRORLEVEL 1 set PATH=%VRAY_APPSDK%\bin\compat;%PATH%

set QT_QPA_PLATFORM_PLUGIN_PATH=%HFS%\bin\Qt_plugins\platforms

@HFS_BIN@ %*
