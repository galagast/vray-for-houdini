    parm {
        name    "SettingsOutput_img_width"
        label   "Image Width"
        type    integer
        default { "640" }
        help    "Output image width"
        range   { 0 64 }
        export  none
        parmtag { "cook_dependent" "1" }
        parmtag { "vray_pluginattr" "img_width" }
