    parm {
        name    "SettingsOutput_rgn_height"
        label   "Image Output Region Height"
        type    float
        default { "480" }
        help    "Image output region height"
        range   { 0 64 }
        export  none
        parmtag { "cook_dependent" "1" }
        parmtag { "vray_pluginattr" "rgn_height" }
        invisible
